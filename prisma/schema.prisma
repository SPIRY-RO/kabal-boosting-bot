// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model TokenInfo {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  tokenAddress String
  tokenSymbol String
  tokenName String
  tokenDecimals Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  telegramId  String  
  previouslyUsedTokens String[]
  rentExpiresAt DateTime?
  masterWalletPK String
  masterWalletAddress String
  referredByUserId String?
  referralTotalEarningsSol Float @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model VolumeBooster {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  slaveWalletPK String
  slaveWalletAddress String
  ownerId    String
  tokenAddress String
  tokenName String
  tokenSymbol String
  fuelAmountFloat Float @default(0)
  puppetWalletCount Int @default(4)
  puppetWalletPKs String[]
  txDelaySeconds Int @default(0)
  totalBuysSol Float @default(0)
  totalSellsSol Float @default(0)
  status String @default("stopped")
  autoStopAfter DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


model RemovedWallet {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  walletAddress String
  walletPK String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
